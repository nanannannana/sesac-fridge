<%-include('../main/head.ejs') %>
<link
  rel="stylesheet"
  type="text/css"
  href="/static/css/user/myPageBasic.css"
/>
<link rel="stylesheet" type="text/css" href="/static/css/user/myPage.css" />
<link
  rel="stylesheet"
  type="text/css"
  href="path/to/chartjs/dist/Chart.min.css"
/>
